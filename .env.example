# Agent Blob Configuration

# Required: Your OpenAI API key
OPENAI_API_KEY=sk-your-api-key-here

# Optional: Model configuration
MODEL_NAME=gpt-4o
# CONTEXT_WINDOW_LIMIT=128000  # Override context window limit (optional)

# Optional: Gateway configuration
GATEWAY_HOST=127.0.0.1
GATEWAY_PORT=3336

# Optional: Database path
DB_PATH=./data/agent_blob.db

# Telegram Bot Configuration (optional)
# Get bot token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=

# Your Telegram user ID (get from @userinfobot)
# Only this user can use the bot (for security)
TELEGRAM_USER_ID=

# Gateway URI (usually no need to change)
GATEWAY_URI=ws://127.0.0.1:3336/ws
