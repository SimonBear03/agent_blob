# OpenAI-compatible API configuration
OPENAI_API_KEY=your_openai_api_key_here
MODEL_NAME=gpt-4o-mini

# PKM (Personal Knowledge Management) vault path
# The agent can write notes here using the PKM skill
PKM_ROOT=/path/to/your/pkm/vault

# Database
DB_PATH=./data/agent_blob.db

# Security: Filesystem access constraints
# Agent can only read/write within this root (absolute path)
ALLOWED_FS_ROOT=/path/to/safe/workspace

# Server configuration
SERVER_HOST=127.0.0.1
SERVER_PORT=8000

# Web app configuration
NEXT_PUBLIC_API_URL=http://127.0.0.1:8000
