{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Tool Definition Schema",
  "description": "Schema for defining agent tools with execution parameters",
  "type": "object",
  "required": ["name", "description", "parameters", "executor"],
  "properties": {
    "name": {
      "type": "string",
      "description": "Unique identifier for the tool (e.g., 'filesystem.read')",
      "pattern": "^[a-z0-9_\\.]+$"
    },
    "description": {
      "type": "string",
      "description": "Human-readable description of what the tool does"
    },
    "parameters": {
      "type": "object",
      "description": "JSON Schema defining the tool's input parameters",
      "properties": {
        "type": {
          "const": "object"
        },
        "properties": {
          "type": "object"
        },
        "required": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "required": ["type", "properties"]
    },
    "executor": {
      "type": "string",
      "description": "Python module path to the executor function (e.g., 'tools.filesystem.read_file')"
    },
    "metadata": {
      "type": "object",
      "description": "Optional metadata about the tool",
      "properties": {
        "category": {
          "type": "string",
          "enum": ["filesystem", "memory", "pkm", "web", "system"]
        },
        "requires_confirmation": {
          "type": "boolean",
          "description": "Whether tool requires user confirmation before execution"
        },
        "audit_level": {
          "type": "string",
          "enum": ["full", "summary", "none"],
          "description": "Level of detail to log in audit trail"
        }
      }
    }
  }
}
