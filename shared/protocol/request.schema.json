{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "AgentBlobRequest",
  "description": "WebSocket request from client to gateway",
  "type": "object",
  "required": ["type", "id", "method", "params"],
  "properties": {
    "type": {
      "type": "string",
      "enum": ["req"],
      "description": "Request type identifier"
    },
    "id": {
      "type": "string",
      "description": "Unique request ID generated by client for matching responses"
    },
    "method": {
      "type": "string",
      "enum": [
        "connect",
        "agent",
        "agent.cancel",
        "sessions.list",
        "sessions.new",
        "sessions.switch",
        "sessions.history",
        "status"
      ],
      "description": "Method to invoke"
    },
    "params": {
      "type": "object",
      "description": "Method-specific parameters"
    }
  }
}
