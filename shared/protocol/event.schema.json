{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "AgentBlobEvent",
  "description": "WebSocket event pushed from gateway to client",
  "type": "object",
  "required": ["type", "event", "payload"],
  "properties": {
    "type": {
      "type": "string",
      "enum": ["event"],
      "description": "Event type identifier"
    },
    "event": {
      "type": "string",
      "enum": [
        "message",
        "queued",
        "token",
        "tool_call",
        "tool_result",
        "status",
        "final",
        "cancelled",
        "error"
      ],
      "description": "Specific event type"
    },
    "payload": {
      "type": "object",
      "description": "Event-specific data"
    },
    "seq": {
      "type": ["integer", "null"],
      "description": "Optional sequence number for ordering"
    }
  }
}
